@model DealerPeak.Models.Dealer

@{
    ViewData["Title"] = "Add/Edit Dealer";
}

<h1>@ViewData["action"]  Dealer</h1>

<h4>Dealer</h4>
<hr />
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDealer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DealerId" />
            <div class="form-group">
                <label asp-for="DealerName" class="control-label"></label>
                <input asp-for="DealerName" class="form-control" />
                <span asp-validation-for="DealerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DealerContact" class="control-label"></label>
                <input asp-for="DealerContact" class="form-control" />
                <span asp-validation-for="DealerContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DealerEmail" class="control-label"></label>
                <input asp-for="DealerEmail" class="form-control" />
                <span asp-validation-for="DealerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    if (Convert.ToString(ViewData["action"]) == "Add")
                    {
                        <input type="submit" value="Add" class="btn btn-primary" />
                    } else {
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    }
                }
            </div>
        </form>
    </div>
</div>

<div> <br/>
    <a asp-action="Index">Back to Dealer List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
